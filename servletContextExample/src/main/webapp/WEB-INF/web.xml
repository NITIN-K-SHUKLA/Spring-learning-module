<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>servletContextExample</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>db-ip</param-name>
		<param-value>127.0.0.1</param-value>
	</context-param>
	<context-param>
		<param-name>db-port</param-name>
		<param-value>3607</param-value>
	</context-param>
	
	<servlet>
		<description></description>
		<display-name>servletContextParam</display-name>
		<servlet-name>servletContextParam</servlet-name>
		<servlet-class>com.servletcontext.servlets.servletContextParam</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>servletContextParam</servlet-name>
		<url-pattern>/servletContextParam</url-pattern>
	</servlet-mapping>
</web-app>